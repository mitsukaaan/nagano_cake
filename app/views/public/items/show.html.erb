<%= form_with model:@cart_item do |f| %>

<% if @item.image.attached? %>
  <%= image_tag @item.image,size:"300x200" %>
<% else %>
  <%= image_tag 'no image_png' ,size:"300x200" %>
<% end %>

 <%= @item.name %>
 <%= @item.introduction %>
 ¥<%= @item.price %>(税込）


  <%= if @item.is_active == true
   <%= f.hidden_field :customer_id, :value => current_customer %>
   <%= f.hidden_field :item_id, :value => @item.id %>
   <%= f.select :amount,*[1..10],{ include_blank: "数量選択"}  %>
   <%= f.submit "カートに入れる" %>
  <% end %>
