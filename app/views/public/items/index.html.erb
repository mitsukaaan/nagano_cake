<h1>商品一覧（全<%= @items.count %>件）</h1>
<% @items.each do |item| %>

<h2>商品名</h2>
<% if item.image.attached? %>
 <%= image_tag item.image,size:"300x200" %>
<% else %>
 <%= image_tag 'no image.png',size:"300x200" %>
<% end %>
<%= item.name %>
¥<%= item.price %>

<% end %>

<%= link_to "ログアウト",destroy_customer_session_path,method: :delete %>
