<%= render'public/homes/header',homes: @homes %>

 <h1>商品一覧（全<%= @items.count %>件）</h1>

<div class ="item-image">
  <% @items.each do |item| %>
   <div>
     <% if item.image.attached? %>
     <%= image_tag item.image,size:"300x200" %>
     <% else %>
     <%= image_tag 'no image.png',size:"300x200" %>
     <% end %>
     <p><%= link_to item.name,"/items/#{item.id}" %></p>
     <p>¥<%= item.price.to_s(:delimited) %></p>
  </div>
 <% end %>
</div>

<%= link_to "ログアウト",destroy_customer_session_path,method: :delete %>


