<div class ="container">
 <header>
   <div class = "row border-bottom">
    <h3 class="col-xl-5 text-center">
     <%= image_tag('nagano_cake.jpeg') %>
    </h3>

    <div class="col-xl-7 text-center font-italic">
      <a class= "d-inline-block m-4">
       <%= link_to "About",about_path %>
      </a>
      <a class="d-inline-block m-4">
       <%= link_to "Items",items_path %>
      </a>
      <a class="d-inline-block m-4">
       <%= link_to"Sign up",new_customer_registration_path %>
      </a>
      <a class="d-inline-block m-4">
       <%= link_to "Log in",new_customer_session_path %>
      </a>
    </header>
   </div>
  </div>

  <div class ="sign up btn btn-outline-secondary">
    <h2>新規会員登録</h2>
  </div>

 <div class ="registration">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class ="col-12 ml-5">
      <%= render "public/shared/error_messages", resource: resource %>

      <p class ="name">
       <%= f.label :名前 %>(姓)  <%= f.text_field :last_name %>(名)<%= f.text_field :first_name %>
        </p>
        <p class ="name">
         <%= f.label :フリガナ %>(セイ)<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana %>
        </p>
        <p class ="email">
         <%= f.label :メールアドレス %><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </p>
        <p class =" potal-code">
         <%= f.label :郵便番号　（ハイフンなし）%><%= f.text_field :postal_code %>
        </p>
        <p class="address">
         <%= f.label :住所 %><%= f.text_field :address %>
         </p>
        <p class ="telephone">
         <%= f.label :電話番号 %><%= f.text_field :telephone_number %>
         </p>
        <p class ="pass">
        <% if @minimum_password_length %>
       <%= f.label :パスワード（6文字以上） %> <%= f.password_field :password, autocomplete: "new-password" %>
       <% end %>
       </p>
     <p class ="pass">
      <%= f.label :パスワード（確認用）%><%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </p>
      <%= f.submit "新規登録",class:"btn btn-success" %>
    <% end %>
   </div>
  </div>

 <div class ="btn btn-outline-secondary">
   既に登録済みの方
 </div>
 <%= link_to "こちら",new_customer_session_path %> からログインしてください。
  </div>
</div>
