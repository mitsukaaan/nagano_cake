<%= form_with model:@order do |f| %>

<h1>注文確認画面</h1>
　<% @total_price = 0 %>
　<% @postage = 800 %>
  <% @cart_items.each do |cart_item| %>

<h2>商品名</h2>
  <%= cart_item.item.name %>

<h2>単価(税込)</h2>
  ¥<%= (cart_item.item.price*1.1).floor.to_s(:delimited) %>

<h2>数量</h2>
　<%= cart_item.amount %>

<h2>小計</h2>
  ¥<%= ((cart_item.item.price*1.1)*(cart_item.amount)).floor.to_s(:delimited) %>

  <% @total_price += (cart_item.item.price*1.1)*(cart_item.amount) %>

<% end %>

<% @total_price = @total_price.floor %>

<%= f.hidden_field:total_price,:value =>@total_price %>
<%= f.hidden_field:postage,:value => @postage %>

<h2>合計金額</h2>
¥<%= @total_price.to_s(:delimited) %>

<h2>請求額</h2>
¥<%= (@total_price + @postage).to_s(:delimited) %>

<h2>支払い方法</h2>
<%= @order.payment_method_i18n %>

<h2>お届け先</h2>
<%= @order.address %>
<%= @order. postal_code %>
<%= @order.name %>

<%= f.hidden_field:payment_method %>
<%= f.hidden_field:name %>
<%= f.hidden_field:postal_code %>
<%= f.hidden_field:address %>
<%= f.hidden_field:postage,:value => @postage %>
<%= f.hidden_field:total_price,:value => @total_price %>
<%= f.hidden_field:customer_id,:value => @customer_id %>

<%= f.submit "注文を確定する" %>
<% end %>
