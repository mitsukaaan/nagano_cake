<h1>注文情報入力</h1>
 <%= form_with model:@order,url:orders_confirm_path do |f| %>
  <h3>支払方法</h3>
   <%= f.radio_button:payment_method,:credit_card %><%= f.label:"クレジットカード" %>
   <%= f.radio_button:payment_method,:transfer %><%= f.label:"銀行振込" %>

  <h3>お届け先</h3>
    <%= f.radio_button:address,:address %><%= f.label:"ご自身の住所" %><br>
      <%= @customer.address %><br>
      <%= @customer.last_name + @customer.first_name %><br>

    <%= f.radio_button:address,:address %><%= f.label:"登録済住所から選択" %><br>
      <%= f.collection_select(:address_id,@addresses,:id,:address, include_blank:'---選択してください---') %><br>

    <%= f.radio_button:address,:address %><%= f.label:"新しいお届け先" %><br>
      <%= f.label:"郵便番号（ハイフンなし）" %><%= f.text_field:postal_code %><br>
      <%= f.label:"住所" %><%= f.text_field:address %><br>
      <%= f.label:"宛名" %><%= f.text_field:name %>

   <%= f.submit'確認画面へ進む',orders_confirm_path %>
  <% end %>


