<h2>ショッピングカート</h2>
<%= form_with model :@item do |f| %>
<% @cart_items.each do |cart_item| %>


<h2>商品名</h2>
  <%= cart_item.item.name %>

<h2>単価</h2>
  <%= cart_item.item.price %>

<h2>数量</h2>
  <%= f.select :amount,*[1..10],{ include_blank: "cart_item.amount"}  %>

<h2>小計</h2>
  <%= (cart_item.item.price)*(cart_item.amount).floor %>

<%= link_to "削除する",cart_item_path(cart_item),method: :delete,"data-confirm" => "カートから削除します。よろしいですか？" %>

<% end %>
<% end %>

