<%= render 'admin/homes/admin_header',homes: @homes %>
<h2>会員一覧画面</h2>
  <table>

   <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
   </tr>
   <% @customers.each do |customer| %>
   <tr>
    <td><%= customer.id %></td>
    <td><%= link_to customer.last_name + customer.first_name,admin_customer_path(customer.id) %></td>
    <td><%= customer.email %></td>
    <td><% if customer.is_active == true %>
     <a class ="text-success">有効</a>
     <% else %>
     <a class ="text-muted">退会</a>
     <% end %></td>
   </tr>
   　 <% end %>
  </table>














