<%= render'public/homes/header',homes: @homes %>


<h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model:@customer,url:admin_customer_path(@customer.id),method: :patch do |f| %>
<div class="customer-edit">
 <div class ="customer-edit-koumoku">
  <p>会員ID</p>
  <p>氏名</p>
  <p>フリガナ</p>
  <p>郵便番号</p>
  <p>住所</p>
  <p>電話番号</p>
  <p>メールアドレス</p>
  <p>会員ステータス</p>
 </div>

 <div class ="customer-edit-info">
  <p><%= @customer_id %></p>
  <p><%= f.text_field:last_name %><%= f.text_field:first_name %></p>
  <p><%= f.text_field:last_name_kana %><%= f.text_field:first_name_kana %></p>
  <p><%= f.text_field:postal_code %></p>
  <p><%= f.text_field:address %></p>
  <p><%= f.text_field:telephone_number %></p>
  <p><%= f.text_field:email %></p>
  <p><%= f.radio_button:is_active,:true %><%= f.label:"有効" %><%= f.radio_button:is_active,:false %><%= f.label:"退会" %></p>
 </div>
</div>


<%= f.submit '変更を保存',class:"btn btn-success" %>
<% end %>
