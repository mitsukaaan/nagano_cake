<div class="container">
  <header>
   <div class = "row border-bottom">
    <h3 class="col-xl-5 font-italic text-left">
     <%= image_tag('nagano_cake.jpeg') %>
    </h3>
    <div class="col-xl-7 text-right font-italic">
      <a class= "d-inline-block m-4">
       <%= link_to "About",about_path %>
      </a>
      <a class="d-inline-block m-4">
       <%= link_to "Items",items_path %>
      </a>
      <a class="d-inline-block m-4">
       <%= link_to"Sign in",new_customer_registration_path %>
      </a>
      <a class="d-inline-block m-4">
       <%= link_to "Log in",new_admin_session_path %>
      </a>
    </header>
   </div>
  </div>
</div>

<h2>注文履歴一覧</h2>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |order| %>
  <% @total_amount = 0 %>
   <tr>
      <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'),admin_order_path(order.id) %></td>
      <td><%= order.customer.last_name + order.customer.first_name %></td>
      <td><% order.order_details.each do |order_detail| %>
          <% @total_amount += order_detail.amount %>
          <% end %>
          <%= @total_amount %></td>
      <td> <%= order.status_i18n  %></td>
    </tr>
  <% end %>
</table>

