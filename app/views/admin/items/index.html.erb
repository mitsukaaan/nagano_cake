<%= render 'admin/homes/admin_header',homes: @homes %>
<h2>商品一覧</h2><%= link_to "＋","/admin/items/new" %>

  <table>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name,"/admin/items/#{item.id}" %></td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active == true %>
            <p class ="text-success">販売中</p>
          <% else %>
            <p class ="text-muted">販売停止中</p>
          <% end %></td>
    </tr>
    <% end %>
  </table>



